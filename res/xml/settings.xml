<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:killerappzz="http://schemas.android.com/apk/res/com.killerappz.android.lwp.donation.tf"
	android:title="@string/spinlogo_settings"
	android:key="settings">

    <com.killerappz.android.lwp.donation.tf.preferences.LogoSizePreference
        android:key="scale"
		android:title="@string/logo_size_title"
		android:dialogTitle="@string/logo_size_title"
		android:summary="@string/logo_size_summary"
		android:persistent="true"
		android:defaultValue="@string/logo_size_default_value"
		android:max="@string/logo_size_max_value" />
		
	<com.killerappz.android.lwp.donation.tf.preferences.RotationSpeedPreference
        android:key="rotation"
		android:title="@string/rotation_speed_title"
		android:dialogTitle="@string/rotation_speed_title"
		android:summary="@string/rotation_speed_summary"
		android:persistent="true"
		android:defaultValue="@string/rotation_speed_default_value"
		android:max="@string/rotation_speed_max_value" />
		
	<com.killerappz.android.lwp.donation.tf.preferences.LicenseStatusPreference
         android:key="licenseStatus"
         android:title="@string/license_check_title"
         android:summary="@string/license_check_summary"
         android:dialogTitle="@string/license_check_dialog_title"/>

	<!-- the ImageList pref screen for selecting the logo image -->
	<com.killerappz.android.lwp.donation.tf.preferences.SpinningLogoTexturePreference
		android:key="logoTexture"
		android:title="@string/logo_texture_title"
		android:summary="@string/logo_texture_defaultValue"
		android:entries="@array/listNamesLogo"
		android:entryValues="@array/listValuesLogo"
		killerappzz:logoImages="@array/imageValuesLogo"/>
		
	<!-- the ImageList pref screen for selecting the skybox texture -->
	<com.killerappz.android.lwp.donation.tf.preferences.SkyboxTexturePreference
		android:key="skyboxTexture"
		android:title="@string/skybox_texture_title"
		android:summary="@string/skybox_texture_defaultValue"
		android:entries="@array/listNamesSkybox"
		android:entryValues="@array/listValuesSkybox"
		killerappzz:skyboxImages="@array/imageValuesSkybox"/>
	
</PreferenceScreen>

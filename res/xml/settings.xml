<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:killerappzz="http://schemas.android.com/apk/res/com.killerappz.android.live.wallpaper.xmen">
	android:title="@string/spinlogo_settings"
	android:key="settings">

    <com.killerappz.android.live.wallpaper.xmen.preferences.RevolutionSpeedPreference
        android:key="revolution"
		android:title="@string/revolution_speed_title"
		android:dialogTitle="@string/revolution_speed_title"
		android:summary="@string/revolution_speed_summary"
		android:persistent="true"
		android:defaultValue="@string/revolution_speed_default_value"
		android:max="@string/revolution_speed_max_value" />
		
	<CheckBoxPreference
		android:key="rotationEnabled" 
		android:title="@string/rotation_title"
	    android:summaryOn="@string/rotation_summary_on"
	    android:summaryOff="@string/rotation_summary_off" />
		
	<com.killerappz.android.live.wallpaper.xmen.preferences.RotationSpeedPreference
        android:key="rotation"
		android:title="@string/rotation_speed_title"
		android:dialogTitle="@string/rotation_speed_title"
		android:summary="@string/rotation_speed_summary"
		android:persistent="true"
		android:dependency="rotationEnabled"
		android:defaultValue="@string/rotation_speed_default_value"
		android:max="@string/rotation_speed_max_value" />
		
	<com.killerappz.android.live.wallpaper.xmen.preferences.LogoSizePreference
        android:key="scale"
		android:title="@string/logo_size_title"
		android:dialogTitle="@string/logo_size_title"
		android:summary="@string/logo_size_summary"
		android:persistent="true"
		android:defaultValue="@string/logo_size_default_value"
		android:max="@string/logo_size_max_value" />
	
	<!-- the ImageList pref screen for selecting the logo image -->	
	<com.killerappz.android.live.wallpaper.xmen.preferences.ImageListPreference
		android:key="logoTexture"
		android:title="@string/logo_texture_title"
		android:summary="@string/logo_texture_defaultValue"
		android:entries="@array/listNames"
		android:entryValues="@array/listValues"
		killerappzz:entryImages="@array/imageValues"/>

	<com.killerappz.android.live.wallpaper.xmen.preferences.LicenseStatusPreference
         android:key="licenseStatus"
         android:title="@string/license_check_title"
         android:summary="@string/license_check_summary"
         android:dialogTitle="@string/license_check_dialog_title"/>
	
</PreferenceScreen>

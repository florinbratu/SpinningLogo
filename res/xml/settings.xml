<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
	android:title="@string/spinlogo_settings"
	android:key="settings">

    <com.killerappz.android.spinlogo.preferences.SeekBarPreference
        android:key="rotation"
		android:title="@string/rotation_speed_title"
		android:dialogTitle="@string/rotation_speed_title"
		android:summary="@string/rotation_speed_summary"
		android:persistent="true"
		android:defaultValue="@string/rotation_speed_default_value"
		android:max="@string/rotation_speed_max_value" />
        
	<CheckBoxPreference android:key="acra.disable"
        android:title="@string/pref_disable_acra"
        android:summaryOn="@string/pref_acra_disabled"
        android:summaryOff="@string/pref_acra_enabled"
        android:defaultValue="false"/>
        
    <com.killerappz.android.spinlogo.preferences.UserFeedbackDialogPreference
        android:key="userFeedback"
		android:title="@string/user_feedback_title"
		android:summary="@string/user_feedback_summary"
		android:dialogTitle="@string/user_feedback_dialog_title"/>
        
</PreferenceScreen>

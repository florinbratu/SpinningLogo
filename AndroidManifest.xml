<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="com.killerappz.android.lwp.mortalkombat"
      android:versionCode="2"
      android:versionName="1.1.0">
    
    <uses-sdk android:minSdkVersion="7" />
    <uses-feature android:name="android.software.live_wallpaper" />
    <uses-permission android:name="com.android.vending.CHECK_LICENSE"/>
    
    <application android:icon="@drawable/icon" 
    	android:label="@string/app_name">
    	
        <service android:label="@string/service_label" 
        	android:name="com.killerappz.android.lwp.mortalkombat.SpinLogoWallpaperService"
        	android:icon="@drawable/icon"
            android:permission="android.permission.BIND_WALLPAPER">
            <intent-filter>
                <action android:name="android.service.wallpaper.WallpaperService" />
            </intent-filter>
            <meta-data android:name="android.service.wallpaper"
                android:resource="@xml/spinlogo" />
        </service>
        
        <activity android:label="@string/spinlogo_settings"
			android:name="com.killerappz.android.lwp.mortalkombat.preferences.LiveWallpaperSettings"
			android:theme="@android:style/Theme.Light.WallpaperSettings"
			android:exported="true"
			android:icon="@drawable/icon">
		</activity>
    </application>
    

</manifest> 